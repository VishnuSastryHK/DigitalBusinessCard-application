<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Business Card Generator</title>

</head>

<body>
    <div class="container">
        <div class="m-4 text-center">
            <br>
            <h1 class="text-white">Digital Card Creation and Management System</h1>
            <br>
            <br>

            <!--h4 class="text-white">Digital Card Generator</h4-->


        </div>
        <div class="row mb-3">
            <a href="blogs/new" class="btn btn-success d-flex align-items-center"><i
                    class="material-icons mr-2">add_circle</i>
                New Card</a>

        </div>

        <div class="row">

            <% if(blogs.length<1){%>
                <p class="text-white">No cards yet, create a new one</p>
                <%  } %>


                    <% blogs.forEach(blog=>{ %>
                        <div class="col-lg-5 card mt-2 mr-4">
                            <div class="row p-2">
                                <div class="col-5 overflow-hidden">
                                    <img src="/uploads/images/<%= blog.img %>" class="card-img" alt="...">
                                </div>
                                <div class="col-7">
                                    <div class="d-flex align-items-start">
                                        <h5 class="w-100"><b> <%= blog.name %> </b></h5>
                                        <!-- display more button -->
                                        <div class="more position-relative" style="cursor: pointer;">
                                            <i class="material-icons p-2">more_vert</i>
                                            <!-- options list -->
                                            <div class="d-none options card rounded-pill shadow-sm p-1 position-absolute">
                                                <a href="blogs/editPersonal/<%= blog.id %> " class="rounded-circle p-2 mb-2" style="background:blue;">
                                                    <i class="material-icons" style="color:white">create</i>
                                                </a>
                                                <form action="/blogs/<%=blog.id%>?_method=DELETE" method="POST">
                                                    <button class="rounded-circle p-2 bg-danger">
                                            <i class="material-icons" style="color:white">delete</i>
                                        </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <span class="align-self-stretch "><%= blog.snippet %>
                        </span>
                                    <div class="d-flex align-items-end">
                                        <!--div class="mr-2">
                                            <img src="/uploads/images/<%= blog.img %>" class="rounded-circle" style="width: 40px; height: 40px;">
                                        </div-->
                                        <div class=" flex-grow-1">
                                            <h5 class="" style="font-size: 14px; line-height: 0.5rem;">
                                                <span><b><%= blog.designation%></b></span></h5>
                                            <h5 class="" style="font-size: 14px; line-height: 0.5rem;">
                                                <span><b><%= blog.company%></b></span></h5>
                                            <br>
                                            <p style="font-size: 8px; line-height: 0.2rem;">Created:
                                                <%= blog.timeCreated.toLocaleDateString() %>
                                            </p>
                                        </div>
                                        <a href="blogs/<%=blog.slug %> " class=" align-self-end">
                                            <i class='material-icons ml-3 text-black'>send</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>




        </div>
        <script src="/js/index.js"></script>

</body>

</html>